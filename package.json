{
  "name": "bmi-node-cli",
  "version": "1.0.0",
  "description": "CLI App to calculate BMI",
  "main": "./build/index.js",
  "bin": {
    "bmi": "./bin/bmi"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "nyc mocha",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && bmi",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@liftr/tscov": "^2.0.0",
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.2",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.5",
    "@types/yargs": "^17.0.13",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.16",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "inquirer": "^9.1.3",
    "inversify": "^6.0.1",
    "kleur": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.4.0",
    "yargs": "^17.6.0"
  }
}
